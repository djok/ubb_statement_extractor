# Streamlit Secrets Configuration
# ================================
# Copy this file to secrets.toml and update with your credentials
# NEVER commit secrets.toml to version control!

# =============================================================================
# AUTHENTICATION (Required for production)
# =============================================================================

[auth]
# OAuth2 redirect URI (your monitoring dashboard URL + /oauth2callback)
redirect_uri = "https://your-monitoring-domain.com/oauth2callback"

# Cookie encryption secret
# Generate with: openssl rand -hex 32
cookie_secret = "generate-a-secure-random-string-here"

# =============================================================================
# ZITADEL OIDC Provider
# =============================================================================
# Configure your Zitadel application here

[auth.zitadel]
# Client ID from your Zitadel web application
client_id = "your-zitadel-client-id"

# Client secret (leave empty for PKCE flow, which is recommended)
client_secret = ""

# OpenID Connect discovery URL
server_metadata_url = "https://your-instance.zitadel.cloud/.well-known/openid-configuration"

# =============================================================================
# GOOGLE CLOUD (optional override)
# =============================================================================
# You can also provide GCP credentials here instead of environment variables

# [gcp]
# project_id = "your-project-id"
# credentials_json = """
# {
#   "type": "service_account",
#   "project_id": "...",
#   ...
# }
# """
